<main> 
    <form id="create_update_appointment" method="post" action="/appointmentform">
      <!-- action and method depend on C vs U-->
      <input type="hidden" name="appointment_id" id="appointment_id" value="0">
      <!-- server sets event_id value-->

      <div class="container">
        <div class="card grey lighten-4">
          <div class="card-content">

            <span class="card-title">
              <h1>Create Patient</h1>
            </span>




              

            <div class="row">
              <div class="input-field col s4">
                <input type="text" id=patient_id name="first_name" class="datepicker no-autoinit" required>
                <label for="first_name">First Name</label>
              </div>

              <div class="input-field col s4">
                <input type="text" id="patient_id" name="last_name" class="timepicker no-autoinit" twelveHour=true
                  required>
                <label for="last_name">Last Name</label>
              </div>

              <div class="input-field col s4">
                <input type="text" id="patient_id" name="email" min=0 step=15>
                <label for="email">Email</label>

              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <input type="text" class="phone_number" data-length="500"></textarea>
                <label for="phone_number">Phone Number</label>
              </div>
            </div>

            <div class="button_wrapper">
              <a href="/doctor" class="waves-effect waves-light btn">Create</a>
            </div>
          </div>
        </div>

      </div>
    </form>
  </main>