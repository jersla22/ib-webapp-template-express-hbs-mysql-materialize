<main>
     <!-- https://materializecss.com/cards.html -->
     <div class="container">
       <h1>Patient List</h1>

       <h5 class="waves-effect waves-light">Click on a patient to create an appointment for them</h5>
        <table>
          <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Email</th>
            </tr>
          </thead>
          <tbody>
            {{#each patients}}
            <tr>
              <td><a href="/appointmentform/{{patient_id}}">{{first_name}}</td></a>
              <td><a href="/appointmentform/{{patient_id}}">{{last_name}}</td></a>
              <td>{{phone_number}}</td>
              <td>{{email_address}}</td>
              <td><a class="btn-floating btn-small waves-effect waves-light green lighten-1" href="/modifypatient/{{patient_id}}"><i
                class="material-icons">edit</i></a>
              <td><a class="btn-floating waves-effect waves-light red"
                href="/list/{{patient_id}}/delete"><i class="material-icons">delete</i></a>
            </tr>
            {{/each}}
          </tbody>
        </table>
         </div>
       </div>
     </div>
   </main>